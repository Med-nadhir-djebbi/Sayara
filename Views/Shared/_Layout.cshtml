<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sayara</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="loading">
    <!-- Premium Navigation Bar -->
    <header class="navbar-premium">
        <div class="container nav-box">
            <a href="/" class="brand-logo">Sayara<span>.</span></a>
            
            <nav class="nav-menu">
                <ul class="nav-items">
                    <li><a href="/" class="nav-item-link active">Home</a></li>
                    <li><a href="/sale" class="nav-item-link">Sale</a></li>
                    <li><a href="/rent" class="nav-item-link">Rentals</a></li>
                </ul>
            </nav>

            <div class="nav-actions">
                <div id="loggedOutActions" class="auth-group">
                    <a href="/login" class="auth-btn auth-btn-outline">Sign In</a>
                    <a href="/register" class="auth-btn auth-btn-primary">Get Started</a>
                </div>
                <div id="loggedInActions" style="display:none;" class="auth-group">
                    <a href="/create" class="btn btn-luxury-small">
                        <i class="fas fa-plus-circle"></i> Post a Car
                    </a>
                    <a href="/profile" class="profile-link">
                        <i class="fas fa-user-circle"></i> Dashboard
                    </a>
                    <button id="logoutBtn" class="logout-link">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </div>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2026 - Sayara - The Premium Marketplace</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Auth State Management
        document.addEventListener("DOMContentLoaded", () => {
            document.body.classList.remove('loading');

            const token = localStorage.getItem("token");
            if (token) {
                document.getElementById("loggedOutActions").style.display = 'none';
                document.getElementById("loggedInActions").style.display = 'flex';
                document.getElementById("loggedInActions").style.alignItems = 'center';
            }

            document.getElementById('logoutBtn')?.addEventListener('click', () => {
                localStorage.removeItem('token');
                localStorage.removeItem('user');
                window.location.href = '/';
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
