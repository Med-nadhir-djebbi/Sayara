<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sayara</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="main-header">
        <div class="container nav-container">
            <a href="/" class="logo">Sayara<span>.</span></a>
            <nav>
                <ul class="nav-links">
                    <li><a href="/" class="nav-link">Home</a></li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Listings" asp-action="SaleView">Buy Car</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Listings" asp-action="RentView">Rent Car</a>
                    </li>
                    <li><a href="/login" class="nav-link btn btn-outline" id="loginBtn" style="padding: 8px 20px;">Login</a></li>
                    <li><a href="/register" class="nav-link btn btn-primary" id="registerBtn" style="padding: 8px 20px;">Register</a></li>
                    <li id="userProfileDisplay" style="display:none;">
                         <a href="/Users/Profile" class="nav-link">My Profile</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2026 - Sayara - The Premium Marketplace</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Simple Auth Check
        document.addEventListener("DOMContentLoaded", () => {
            const token = localStorage.getItem("token");
            if (token) {
                document.getElementById("loginBtn").style.display = 'none';
                document.getElementById("registerBtn").style.display = 'none';
                document.getElementById("userProfileDisplay").style.display = 'block';
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
